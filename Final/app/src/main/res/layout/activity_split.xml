<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplitActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/split_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/login_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        />

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/split_toolbar"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/icon"

        />
    <TextView
        android:id="@+id/tv_split"
        android:layout_below="@+id/ic_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Solve Money Problem $$ !"
        android:textAlignment="center"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/et_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tv_split"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Bill amount $"
        android:inputType="number"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/et_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bill"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter tip %"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_tip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Number of people!!"
        android:inputType="numberSigned|number"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/calculate_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_people"
        android:layout_marginLeft="122dp"
        android:src="@drawable/ic_attach_money_black_24dp"
        android:enabled="false"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"


        android:layout_marginTop="16dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_add_circle_black_24dp" />




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"


        android:layout_marginTop="16dp"
        android:layout_marginEnd="310dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_restaurant_black_24dp" />





</RelativeLayout>